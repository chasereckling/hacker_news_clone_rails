<%= render "layouts/errors", :object => @comment %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :author %>:
  <br>
  <%= f.text_field :author %>
  <br>
  <%= f.label :body %>:
  <br>
  <%= f.text_area(:body, rows: 5, cols: 40, placeholder: "hold this spot...") %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
